<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgardient"
    android:screenOrientation="portrait">


    <ImageView
        android:id="@+id/image1"
        android:layout_width="166dp"
        android:layout_height="137dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"
        app:srcCompat="@drawable/userimage" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="270dp"
        android:layout_height="260dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shap_recsom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintVertical_bias="0.31">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="255dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/shap_rectangal">

            <ImageView
                android:id="@+id/userimg"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/todo"

                app:layout_constraintHorizontal_bias="0.077"

                app:layout_constraintVertical_bias="0.449"
                app:srcCompat="@drawable/usershape" />

            <EditText
                android:id="@+id/username"
                android:layout_width="210dp"
                android:layout_height="41dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="Email"
                android:ems="10"
                android:hint="59050XXX@kmitl.ac.th"
                android:inputType="textPersonName"

                app:layout_constraintHorizontal_bias="0.63"

                app:layout_constraintVertical_bias="0.45"
                tools:targetApi="o" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="255dp"
            android:layout_height="41dp"
            android:layout_marginStart="-255dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/shap_rectangal">

            <ImageView
                android:id="@+id/passimg"
                android:layout_width="31dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/todo"

                app:layout_constraintHorizontal_bias="0.057"

                app:layout_constraintVertical_bias="0.617"
                app:srcCompat="@drawable/lock" />

            <EditText
                android:id="@+id/password"
                android:layout_width="210dp"
                android:layout_height="41dp"
                android:layout_marginBottom="8dp"
                android:autofillHints="@string/password"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"

                app:layout_constraintHorizontal_bias="0.67"

                app:layout_constraintVertical_bias="0.62"
                tools:targetApi="o" />

        </LinearLayout>

        <TextView
            android:id="@+id/Signin01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-195dp"
            android:text="@string/sign_in"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#000000"

            />
    </LinearLayout>

    <Button
        android:id="@+id/btLogin"
        style="@style/btn_blue"
        android:layout_width="200dp"
        android:text="@string/login"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.95"
        android:onClick="btlogin_Click"/>


</android.support.constraint.ConstraintLayout>